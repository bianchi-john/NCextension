{
    "name": "NCextension",
    "description": "Base Level Extension",
    "manifest_version": 3,
    "icons": {
        "16": "img/icon16.png",
        "24": "img/icon24.png",
        "32": "img/icon32.png",
        "64": "img/icon64.png",
        "128": "img/icon128.png"
    },
    "version": "1.0",
    "background": {
        "service_worker": "background.js",  
        "type": "module"
    },
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}
